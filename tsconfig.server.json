{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}