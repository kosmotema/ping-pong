{
  "name": "@xapdkop/ping-pong",
  "version": "0.8.0",
  "private": true,
  "description": "Just a classic version of the Pong Pong game",
  "main": "index.html",
  "scripts": {
    "sass:prod": "node-sass ./scss/ --output ./assets/css/",
    "sass:dev": "yarn sass:prod --output-style expanded --source-map true",
    "sass:watch": "yarn sass:dev --watch",
    "build": "tsc && yarn sass:prod",
    "predev": "tsc && yarn sass:dev",
    "dev": "concurrently --kill-others \"yarn sass:watch\" \"tsc --watch\" \"ts-node-dev --respawn --inspect --transpile-only --project ./tsconfig.server.json ./server.ts\"",
    "svgo": "svgo -f ./assets/img"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xapdkop/ping-pong.git"
  },
  "author": "xapdkop",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/xapdkop/ping-pong/issues"
  },
  "homepage": "https://github.com/xapdkop/ping-pong#readme",
  "dependencies": {
    "node-sass": "^5.0.0",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "concurrently": "^5.3.0",
    "fastify": "^3.7.0",
    "fastify-static": "^3.3.0",
    "svgo": "^1.3.2",
    "ts-node-dev": "^1.0.0-pre.63"
  }
}
